<!DOCTYPE html>
<html lang="es">

	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1,
																																							            shrink-to-fit=no">
		<title>
			{% block title %}Mega Podcasts
			{% endblock %}
		</title>
		<link rel="shortcut icon" type="image/jpg" href="{{ asset('img/logo.jpg') }}">
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
			<link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}">
		{% endblock %}
	</head>

	<body>
		{% block header %}
			<nav class="navbar navbar-expand-lg navbar-light">
				<a class="navbar-brand" href="{{ path('dashboard') }}"><img class="mr-3" src="{{ asset('img/logo.jpg') }}" alt="logo de linux world">Linux World</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				{% if app.user != null %}
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav ml-auto">
							<li class="nav-item active">
								<a class="nav-link" >Bienvenid@ {{ app.user.nombre }}</a>
							</li>
							<li class="nav-item active">
								<a class="nav-link" href="{{ path('dashboard') }}">Inicio</a>
							</li>
							<li class="nav-item active">
								<a class="nav-link" href="{{ path('guardarPost') }}">Crear Post</a>
							</li>
							<li class="nav-item active">
								<a class="nav-link" href="{{ path('verPerfil') }}">Perfil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_logout') }}">Cerrar sesión</a>
							</li>
						</ul>
					</div>
				{% else %}
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav ml-auto">
							<li class="nav-item active">
								<a class="nav-link" href="{{ path('app_login') }}">Login</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('registro') }}">Crear cuenta</a>
							</li>
						</ul>
					</div>
				{% endif %}
			</nav>
		{% endblock %}


		<div class="container">
				<main>
					{% block body %}{% endblock %}
				</main>
			</div>

		{# FOOTER #}
		<footer>
			<div class="">
				<p class="copyright">
					<a href="https://gomez-fernando.github.io/portfolio/" target="_blank" rel="noopener noreferrer">Developed by
																		          Fernando Gómez &copy; 2020</a>
				</p>
			</div>
		</footer>
		{# END FOOTER #}

		{% block javascripts %}
			<script src="{{ asset('js/jquery.min.js') }}"></script>
			<script src="{{ asset('js/bootstrap.min.js') }}"></script>
		{% endblock %}


		if(window.location.href.indexOf("/home/") > -1) {
		url = window.location.href;
		n = url.substr(url.length - 1);
		$('.header-02 .nav-item:nth-child('+n+')').find('.nav-link').addClass('selected');
		// Title con el nombre de la categoria
		title = $('.header-02 .nav-link.selected').text();
		document.title=title;
		}

		<script>
			$(document).ready(function(){
				var anterior = $("body").html().replace('Previous','Anterior');
				$("body").html(anterior);

				var siguiente = $("body").html().replace('Next','Siguiente');
				$("body").html(siguiente);

			});
		</script>
	</body>

</html>
